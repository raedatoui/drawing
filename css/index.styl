@require './normalize'
@require './mixin'

html, body
  background #d4d4d4 url("images/background.png")
  font-family sans-serif
  width 100%
  height 100%
  min-height 100%
  position relative
  overflow hidden

h1
  color rgba(0, 0, 0, .3)
  font-weight bold
  font-size 18px
  text-align left
  letter-spacing -1px
  text-transform uppercase
  text-shadow 0 1px 0 rgba(255, 255, 255, .5)
  padding 10px
  margin 0
  transform rotate(90deg)
  -ms-transform rotate(90deg) /* IE 9 */
  -webkit-transform rotate(90deg) /* Opera, Chrome, and Safari */
  position absolute
  top 170px
  left -180px

.doc
  font-size 14px
  margin 0
  &:before, &:after
    opacity: .2
    padding 6px
    font-style normal
    position relative
    content "â€¢"

  a
  color rgba(0, 0, 0, 0.3)
  &:hover
    color: #666


.command-line
  position absolute
  top 0
  left 5%
  margin 0
  padding 0
  height 3%
  h2
    font-size 14px
  input
    float left
    font-size 16px
    width 300px
    line-height 100%
    height 100%
  .error
    float left
    color red
    font-size 10px
    display none
    line-height 100%


.renderer
  width 90%
  height 90%
  position absolute
  top 9%
  left 5%
  // background-color rgba(255,44,44,0.2)
  border 1px dashed black
  margin auto
  &.quit
    transform(rotateY(720deg))
    transition(4s, all, ease-out)
  .message
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background-color #ccc

  table
    width 100%
    height 100%
    table-layout fixed
  td
    padding 0
    border 1px solid black
    text-align center
    overflow hidden
    white-space nowrap
